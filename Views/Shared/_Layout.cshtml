<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="The Vedauri team develops websites, desktop software applications, phone application apps and video games. Based in Tyler Texas." />
    <title>@ViewBag.Title - Vedauri</title>
    <link rel="icon" href="~/img/v-min.png" type="image/x-icon" />
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <button id="btnTogMenu" class="v-navbar-tog btn btn-outline-light" type="button">
        Menu
    </button>

    <div id="menu" class="v-section v-menu">
        <div class="row v-section-content">
            <div class="col-lg-12 text-center">
                <ul class="navbar-nav v-navbar">
                    <li class="nav-item v-nav-item">
                        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link v-nav-link" })
                    </li>
                    <li class="nav-item v-nav-item">
                        @Html.ActionLink("Website", "Website", "Home", null, new { @class = "nav-link v-nav-link" })
                    </li>
                    <li class="nav-item v-nav-item">
                        @Html.ActionLink("Software", "Software", "Home", null, new { @class = "nav-link v-nav-link" })
                    </li>
                    <li class="nav-item v-nav-item">
                        @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link v-nav-link" })
                    </li>
                    <li class="nav-item v-nav-item">
                        @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link v-nav-link" })
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div id="dvMain" class="container-fluid body-content">
        @RenderBody()
        <footer class="v-footer">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="v-footer-text">&copy; Vedauri @DateTime.Now.Year</div>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/script")
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/Main.js"></script>
    <script type="module" src="~/Scripts/MainThree.js"></script>

    <script type="text/javascript">

        var menuToggled = false;

        $(document).ready(function () {
            console.log(location.pathname);
            $('a[href$="' + location.pathname + '"]').addClass('active');
            $("#menu").hide();
        });

        $("#btnTogMenu").click(() => Menu());

        function Menu() {

            menuToggled = !menuToggled;

            if (menuToggled) {
                $("#menu").fadeIn();
            } else {
                $("#menu").fadeOut();
            }

        }
    </script>

</body>
</html>
