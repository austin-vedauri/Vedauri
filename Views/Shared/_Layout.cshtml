<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Vedauri</title>
    <link rel="icon" href="~/img/v-min.png" type="image/x-icon" />
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <nav class="navbar navbar-expand-lg fixed-top navbar-dark v-nav-shade">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav v-navbar">
                <li class="nav-item v-nav-item">
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item v-nav-item">
                    @Html.ActionLink("Website", "Website", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item v-nav-item">
                    @Html.ActionLink("Software", "Software", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item v-nav-item">
                    @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item v-nav-item">
                    @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
    </nav>

    <div id="dvMain" class="container-fluid body-content">
        @RenderBody()
        <footer class="v-footer">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="v-footer-text">&copy; Vedauri @DateTime.Now.Year</div>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/script")
    @RenderSection("scripts", required: false)

<script src="~/Scripts/Main.js"></script>
<script type="module" src="~/Scripts/MainThree.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            console.log(location.pathname);
            $('a[href$="' + location.pathname + '"]').addClass('active');
        });
    </script>

</body>
</html>
