                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/img/portfolio/web/ea_07.JPG" alt="FirstSlide" />
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/img/portfolio/web/ea_08.JPG" alt="FirstSlide" />
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon v-control-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon v-control-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="v-section vedauritron">
    <div class="row v-section-content">
        <div class="col-lg-12 text-center">
            <h1 class="display-3">Ready?</h1>
            <h2 class="v-header">Get Started</h2>
            <blockquote class="blockquote">
                <p class="mb-0">
                    Hit the button below and let's discuss your site today.
                </p>
            </blockquote>
            @Html.ActionLink("Contact Us", "Contact", "Home", null, new { @class = "btn btn-lg btn-outline-light" })
